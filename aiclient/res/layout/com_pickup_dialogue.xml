          android:gravity="left"

          android:layout_width="wrap_content"
          android:layout_weight="1"
          android:layout_marginLeft="20px"
          android:textColor="#ff000000" android:layout_height="fill_parent" android:layout_marginTop="30px" android:text="{Name}"/>
      

  </LinearLayout>
