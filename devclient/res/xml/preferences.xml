<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android" android:title="Exploding Places Preferences">
<EditTextPreference android:key="defaultPlayerName" android:title="Default Player Name" android:summary="Default in-game name of player"></EditTextPreference><EditTextPreference android:summary="URL of the game server" android:key="serverUrl" android:title="Server URL" android:enabled="true" android:selectable="true"></EditTextPreference>
<CheckBoxPreference android:key="restartClient" android:title="Restart Client" android:summary="Restart client when next opened from Home"></CheckBoxPreference>

<EditTextPreference android:key="clientId" android:title="Device ID" android:summary="Unique device ID"></EditTextPreference>
<ListPreference android:key="pollInterval" android:title="Poll Interval" android:summary="Time between getting updates from server" android:entries="@array/preferences_poll_interval_names" android:entryValues="@array/preferences_poll_interval_values" android:defaultValue="15000"></ListPreference>
</PreferenceScreen>
